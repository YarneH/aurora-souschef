<?xml version="1.0" encoding="utf-8"?><!-- Tab which displays an overview of the recipe. -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Text view for showing the description -->
    <TextView
        android:id="@+id/tv_recipe_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/tab1_text_margin"
        android:layout_marginTop="@dimen/tab1_text_margin"
        android:scrollbars="vertical"
        android:textSize="@dimen/text_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>